{
  "short_name": "OpenWeb Agent",
  "name": "OpenWeb Agent",
  "description": "OpenWeb Agent is a plugin for web navigation and task completion.",
  "manifest_version": 3,
  "version": "2.0",
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "contextMenus",
    "nativeMessaging",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
      {
        "resources": [ "windowOpen.js" ],
        "matches": ["<all_urls>"]
      },
      {
        "resources": [ "favicon.png" ],
        "matches": ["<all_urls>"]
      }
  ],
  "action": {
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    },
    "default_title": "OpenWebAgent"
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
